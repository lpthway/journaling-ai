# Docker Environment Configuration for Journaling AI
# Copy this to .env for local development overrides

# === DATABASE ===
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/journaling_ai
# For Docker: postgresql+asyncpg://postgres:password@postgres:5432/journaling_ai

# === REDIS ===
REDIS_URL=redis://localhost:6379/0
# For Docker: redis://:password@redis:6379/0

CELERY_BROKER_URL=redis://localhost:6379/0
# For Docker: redis://:password@redis:6379/0

CELERY_RESULT_BACKEND=redis://localhost:6379/0
# For Docker: redis://:password@redis:6379/0

# === APPLICATION ===
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# === SECURITY ===
SECRET_KEY=your-secret-key-change-in-production

# === AI MODELS ===
OLLAMA_BASE_URL=http://localhost:11434
# For Docker: http://host.docker.internal:11434

# === PERFORMANCE ===
ANALYTICS_CACHE_ENABLED=true
ANALYTICS_CACHE_TTL=3600
BACKGROUND_TASKS_ENABLED=true
