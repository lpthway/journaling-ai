{
  "version": "2.1",
  "hardware_tiers": {
    "MINIMAL": {
      "description": "Basic functionality for low-resource systems",
      "memory_limit": 100,
      "min_ram_gb": 0,
      "max_ram_gb": 3,
      "min_gpu_memory_mb": 0,
      "max_gpu_memory_mb": 0,
      "features": [
        "keyword_analysis",
        "basic_stats",
        "text_length_analysis",
        "simple_word_frequency"
      ],
      "models": {},
      "fallback_methods": {
        "sentiment": "keyword_based",
        "emotion": "text_pattern_matching",
        "topic": "keyword_clustering"
      }
    },
    "BASIC": {
      "description": "Essential AI features for standard computers",
      "memory_limit": 800,
      "min_ram_gb": 3,
      "max_ram_gb": 7,
      "min_gpu_memory_mb": 0,
      "max_gpu_memory_mb": 2048,
      "features": [
        "sentiment_analysis",
        "basic_emotion_detection",
        "ai_auto_tagging",
        "simple_insights",
        "keyword_analysis",
        "basic_stats"
      ],
      "models": {
        "sentiment": {
          "name": "distilbert-base-uncased-finetuned-sst-2-english",
          "task": "sentiment-analysis",
          "memory_mb": 255,
          "load_priority": 1
        },
        "emotion": {
          "name": "j-hartmann/emotion-english-distilroberta-base",
          "task": "text-classification",
          "memory_mb": 255,
          "load_priority": 2
        }
      }
    },
    "STANDARD": {
      "description": "Advanced AI analysis for capable systems",
      "memory_limit": 3000,
      "min_ram_gb": 7,
      "max_ram_gb": 15,
      "min_gpu_memory_mb": 0,
      "max_gpu_memory_mb": 6144,
      "features": [
        "advanced_sentiment_analysis",
        "detailed_emotion_detection",
        "topic_modeling",
        "writing_insights",
        "pattern_recognition",
        "mood_prediction",
        "contextual_analysis",
        "ai_auto_tagging",
        "smart_prompts"
      ],
      "models": {
        "sentiment": {
          "name": "cardiffnlp/twitter-roberta-base-sentiment-latest",
          "task": "sentiment-analysis",
          "memory_mb": 500,
          "load_priority": 1
        },
        "emotion": {
          "name": "j-hartmann/emotion-english-distilroberta-base",
          "task": "text-classification",
          "memory_mb": 255,
          "load_priority": 2
        },
        "topic": {
          "name": "facebook/bart-base",
          "task": "zero-shot-classification",
          "memory_mb": 558,
          "load_priority": 3
        }
      }
    },
    "HIGH_END": {
      "description": "Premium AI features for high-performance systems",
      "memory_limit": 8000,
      "min_ram_gb": 15,
      "max_ram_gb": 999,
      "min_gpu_memory_mb": 4096,
      "max_gpu_memory_mb": 999999,
      "features": [
        "premium_sentiment_analysis",
        "comprehensive_emotion_analysis",
        "advanced_topic_modeling",
        "auto_summary_generation",
        "semantic_search",
        "style_analysis",
        "personality_insights",
        "predictive_analytics",
        "contextual_recommendations",
        "advanced_pattern_recognition",
        "multi_language_support"
      ],
      "models": {
        "sentiment": {
          "name": "cardiffnlp/twitter-roberta-base-sentiment-latest",
          "task": "sentiment-analysis",
          "memory_mb": 500,
          "load_priority": 1
        },
        "emotion": {
          "name": "j-hartmann/emotion-english-distilroberta-base",
          "task": "text-classification",
          "memory_mb": 255,
          "load_priority": 2
        },
        "summary": {
          "name": "facebook/bart-large-cnn",
          "task": "summarization",
          "memory_mb": 1600,
          "load_priority": 4
        },
        "semantic": {
          "name": "sentence-transformers/all-mpnet-base-v2",
          "task": "feature-extraction",
          "memory_mb": 438,
          "load_priority": 3
        },
        "topic": {
          "name": "facebook/bart-large",
          "task": "zero-shot-classification",
          "memory_mb": 1600,
          "load_priority": 5
        }
      }
    }
  },
  "model_fallbacks": {
    "sentiment": [
      "cardiffnlp/twitter-roberta-base-sentiment-latest",
      "distilbert-base-uncased-finetuned-sst-2-english",
      "keyword_based"
    ],
    "emotion": [
      "j-hartmann/emotion-english-distilroberta-base",
      "text_pattern_matching"
    ],
    "topic": [
      "facebook/bart-large",
      "facebook/bart-base",
      "keyword_clustering"
    ],
    "summary": [
      "facebook/bart-large-cnn",
      "extractive_summary"
    ],
    "semantic": [
      "sentence-transformers/all-mpnet-base-v2",
      "tfidf_similarity"
    ]
  },
  "performance_settings": {
    "cleanup_interval": 300,
    "hardware_check_interval": 300,
    "batch_size": 10,
    "model_inactivity_timeout": 600,
    "memory_pressure_threshold": 0.85,
    "gpu_memory_reserve": 1024
  },
  "optimization_settings": {
    "use_half_precision": true,
    "use_low_cpu_mem": true,
    "use_device_map_auto": true,
    "cache_dir": "./models",
    "max_concurrent_models": 3
  }
}
